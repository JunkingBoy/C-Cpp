{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "E:/GccCompile/mingw64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g", // 添加gdb调试选项
				"${file}",
				"-o", // 指定生成可执行文件名称
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				// 设置编码为GBK
				"-fexec-charset=GBK"
			],
			"options": {
				"cwd": "E:/GccCompile/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: E:/GccCompile/mingw64/bin/g++.exe"
		}
	]
}